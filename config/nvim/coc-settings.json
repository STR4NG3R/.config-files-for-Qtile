{
  "coc.preferences.snippets.enable": true,
  "coc.preferences.extensionUpdateCheck": "never",

  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "markdown",
    "Markdown",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "json"
  ],

  "cSpell.enabled":true,
  "cSpellExt.enableDictionaries": ["spanish", "english"],
  "cSpell.showCommandsInEditorContextMenu": true,
  "cSpell.language": "en,es",
  "cSpell.enabledLanguageIds": ["tex"],
  "cSpell.numSuggestions": 8,

  "explorer.width": 30,
  "explorer.file.root.template": "[icon] [git] [hidden & 1][root]",
  "explorer.icon.enableNerdfont": true,
  "explorer.previewAction.onHover": false,
  "explorer.icon.enableVimDevicons": true,
  "explorer.file.showHiddenFiles": false,
  "explorer.position": "right",

  "codeLens.enable": true,
  "java.referencesCodeLens.enabled": true,
  "java.signatureHelp.enabled": true,

  "java.configuration.runtimes": [
    {
      "name": "JavaSE-11",
      "path": "/usr/lib/jvm/java-11-openjdk",
      "default": true
    },
    {
      "name": "JavaSE-1.8",
      "path": "/usr/lib/jvm/java-8-openjdk"
    }
  ],

  "emmet.includeLanguages": {
    "vue-html": "html",
    "javascript": "javascriptreact"
  },
  "languageserver": {
    "go": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "trace.server": "verbose",
      "filetypes": ["go"]
    }
  },
  /* "eslint.autoFixOnSave": false, */
  "cSpell.userWords": [
    "amet",
    "documentclass",
    "hyperref",
    "hypersetup",
    "inputenc",
    "linkcolor",
    "maketitle",
    "titlepage",
    "urlcolor",
    "usepackage"
  ]
}
